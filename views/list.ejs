<%- include('header') %> 

    <div class="box" id="heading">
        <h1 style="color:white"> <%=listTitle%></h1>
    </div> 

    <div class="box">
        <% for( let i = 0; i < newListItemsH.length; i++ ) { %>
            <div class="item task">
                <label class="taskLabel" for="task<%=i%>"></label>
                <input type="checkbox" name="" id="task<%=i%>">
                <p> <%= newListItemsH[i] %> </p>    
            </div>
        <% } %>

        <form class="item" action="/" method="POST">
            <input placeholder="New Item" type="text" name="newItem" id="" autocomplete="off" required>
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>
    </div>

    <%- include('footer') %>